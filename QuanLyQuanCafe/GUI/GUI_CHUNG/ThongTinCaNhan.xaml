<Window x:Class="QuanLyQuanCafe.GUI.GUI_CHUNG.ThongTinCaNhan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanCafe.GUI.GUI_CHUNG"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
WindowStyle="None"
ResizeMode="NoResize"
       
        Title="ThongTinCaNhan" Height="620" Width="600">
    <Grid x:Name="quanlythongtincanhan" Loaded="quanlythongtincanhan_Loaded">
        <GroupBox HorizontalAlignment="Center" Height="359" Header="Thông tin" Margin="0,10,0,0" VerticalAlignment="Top" Width="580">
            <Grid HorizontalAlignment="Left" Height="337" Margin="2,0,0,0" VerticalAlignment="Center" Width="568">
                <Label Content="Mã nhân viên:" HorizontalAlignment="Left" Height="36" Margin="10,10,0,0" VerticalAlignment="Top" Width="170"/>
                <Label Content="Tên nhân viên:" HorizontalAlignment="Left" Height="34" Margin="10,54,0,0" VerticalAlignment="Top" Width="170"/>
                <Label Content="Địa chỉ:" HorizontalAlignment="Left" Height="28" Margin="10,93,0,0" VerticalAlignment="Top" Width="170"/>
                <Label Content="Ngày vào làm:" HorizontalAlignment="Left" Height="28" Margin="10,126,0,0" VerticalAlignment="Top" Width="170"/>
                <Label Content="Tuổi:" HorizontalAlignment="Left" Height="33" Margin="10,166,0,0" VerticalAlignment="Top" Width="170"/>
                <Label Content="Số điện thoại:" HorizontalAlignment="Left" Height="30" Margin="10,208,0,0" VerticalAlignment="Top" Width="170"/>
                <Label Content="Giới tính:" HorizontalAlignment="Left" Height="30" Margin="10,249,0,0" VerticalAlignment="Top" Width="170"/>
                <Label Content="Tên đăng nhập:" HorizontalAlignment="Left" Height="30" Margin="10,292,0,0" VerticalAlignment="Top" Width="170"/>
                <TextBlock x:Name="tb_manhanvien" HorizontalAlignment="Left" Height="32" Margin="194,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="tb_tennhanvien" HorizontalAlignment="Left" Height="34" Margin="194,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="tb_diachinhanvien" HorizontalAlignment="Left" Height="28" Margin="194,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="tb_ngayvaolam" HorizontalAlignment="Left" Height="35" Margin="194,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="tb_tuoinhanvien" HorizontalAlignment="Left" Height="28" Margin="194,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="tb_sodienthoainhanvien" HorizontalAlignment="Left" Height="37" Margin="194,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="tb_gioitinhnhanvien" HorizontalAlignment="Left" Height="39" Margin="194,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2"/>
                <TextBlock x:Name="tb_tendangnhap" HorizontalAlignment="Left" Height="33" Margin="194,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Grid.ColumnSpan="2"/>
            </Grid>
        </GroupBox>
        <GroupBox HorizontalAlignment="Left" Height="167" Header="Đổi mật khẩu" Margin="12,374,0,0" VerticalAlignment="Top" Width="578">
            <Grid HorizontalAlignment="Left" Height="144" VerticalAlignment="Center" Width="568">
                <TextBox x:Name="txt_matkhaucu" HorizontalAlignment="Left" Height="35" Margin="190,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="251" Grid.ColumnSpan="2"/>
                <TextBox x:Name="txt_matkhaumoi" HorizontalAlignment="Left" Height="36" Margin="190,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="251" Grid.ColumnSpan="2"/>
                <TextBox x:Name="txt_nhaplaimatkhaumoi" HorizontalAlignment="Left" Height="36" Margin="190,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="251" Grid.ColumnSpan="2"/>
            </Grid>
        </GroupBox>
        <Button x:Name="btn_doimatkhau" Content="Đổi mật khẩu" HorizontalAlignment="Left" Height="28" Margin="300,546,0,0" VerticalAlignment="Top" Width="134" Click="btn_doimatkhau_Click"/>
        <Label Content="Nhập lại mât khẩu mới:" HorizontalAlignment="Left" Height="33" Margin="34,494,0,0" VerticalAlignment="Top" Width="148"/>
        <Label Content="Mật khẩu mới:" HorizontalAlignment="Left" Height="33" Margin="34,452,0,0" VerticalAlignment="Top" Width="148"/>
        <Label Content="Mật khẩu cũ:" HorizontalAlignment="Left" Height="33" Margin="34,413,0,0" VerticalAlignment="Top" Width="148"/>
        <Button x:Name="btn_thoat" Content="Thoát" HorizontalAlignment="Left" Height="28" Margin="456,546,0,0" VerticalAlignment="Top" Width="134" Click="btn_thoat_Click_1"/>
    </Grid>
</Window>
