<Window x:Class="QuanLyQuanCafe.GUI.GUI_CHUNG.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanCafe.GUI.GUI_CHUNG"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Background="Wheat"
        Title="                                                                         Đăng nhập" Height="295" Width="582">
    <Grid>
        <Image Source="/GUI/GUI_CHUNG/logo.png" HorizontalAlignment="Left" Height="205" VerticalAlignment="Center" Width="274"/>
        <Label Content="PHẦN MỀM QUẢN LÝ QUÁN CAFE" HorizontalAlignment="Left" Height="33" Margin="327,10,0,0" VerticalAlignment="Top" Width="224"/>
        <Label Content="Tên đăng nhập" HorizontalAlignment="Left" Height="30" Margin="291,43,0,0" VerticalAlignment="Top" Width="108"/>
        <TextBox x:Name="txt_tendangnhap" HorizontalAlignment="Left" Height="31" Margin="291,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" TextChanged="txt_tendangnhap_TextChanged" Text="admin"/>
        <Label Content="Mật khẩu" HorizontalAlignment="Left" Height="30" Margin="291,122,0,0" VerticalAlignment="Top" Width="108"/>
        <PasswordBox x:Name="txt_matkhau" HorizontalAlignment="Left" Height="31" Margin="291,152,0,0"  VerticalAlignment="Top" Width="269" Password="admin" />
        <Button x:Name="btn_dangnhap" Content="Đăng nhập" HorizontalAlignment="Left" Height="36" Margin="291,206,0,0" VerticalAlignment="Top" Width="126" Click="btn_dangnhap_Click"/>
        <Button x:Name="btn_thoat" Content="Thoát" HorizontalAlignment="Left" Height="36" Margin="434,206,0,0" VerticalAlignment="Top" Width="126" Click="btn_thoat_Click"/>

    </Grid>
</Window>
