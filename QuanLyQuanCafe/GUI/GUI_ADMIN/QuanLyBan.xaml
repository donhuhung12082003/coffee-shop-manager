<Window x:Class="QuanLyQuanCafe.GUI.GUI_ADMIN.QuanLyBan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanCafe.GUI.GUI_ADMIN"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
WindowStyle="None"
ResizeMode="NoResize"
        Title="QuanLyBan" Height="450" Width="800">
    <Grid x:Name="quanlyban" Loaded="quanlyban_Loaded">
        <Label Content="Mã bàn:" HorizontalAlignment="Left" Height="36" Margin="19,10,0,0" VerticalAlignment="Top" Width="176"/>
        <TextBox x:Name="txt_maban" HorizontalAlignment="Left" Height="36" Margin="214,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136"/>
        <Label Content="Tên bàn:" HorizontalAlignment="Left" Height="36" Margin="458,10,0,0" VerticalAlignment="Top" Width="176"/>
        <TextBox x:Name="txt_tenban" HorizontalAlignment="Left" Height="36" Margin="653,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137"/>
        <Label Content="Tầng:" HorizontalAlignment="Left" Height="36" Margin="19,62,0,0" VerticalAlignment="Top" Width="176"/>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" x:Name="dg_dsban" HorizontalAlignment="Left" Height="190" Margin="34,167,0,0" VerticalAlignment="Top" Width="756" SelectionChanged="dg_dsban_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã bàn" Binding="{Binding MaBan}" Width="*"/>
                <DataGridTextColumn Header="Tên bàn" Binding="{Binding TenBan}" Width="*"/>
                <DataGridTextColumn Header="Mã Tầng" Binding="{Binding MaTang}" Width="*"/>
                <DataGridCheckBoxColumn Header="Bàn có người" Binding="{Binding TrangThai}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_them" Content="Thêm" HorizontalAlignment="Left" Height="28" Margin="142,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_them_Click"/>
        <Button x:Name="btn_sua" Content="Sửa" HorizontalAlignment="Left" Height="28" Margin="246,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_sua_Click"/>
        <Button x:Name="btn_xoa" Content="Xóa" HorizontalAlignment="Left" Height="28" Margin="360,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_xoa_Click"/>
        <Button x:Name="btn_nhaplai" Content="Nhập lại" HorizontalAlignment="Left" Height="28" Margin="460,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_nhaplai_Click" />
        <Button x:Name="btn_thoat" Content="Thoát" HorizontalAlignment="Left" Height="28" Margin="560,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_thoat_Click"/>
        <ComboBox x:Name="cbo_tang" HorizontalAlignment="Left" Height="36" Margin="214,62,0,0" VerticalAlignment="Top" Width="137"/>
        <Label Content="Tìm theo tên:" HorizontalAlignment="Left" Height="32" Margin="107,120,0,0" VerticalAlignment="Top" Width="139"/>
        <TextBox x:Name="txt_timtheoten" HorizontalAlignment="Left" Height="32" Margin="282,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"/>
        <Button x:Name="btn_timtheoten" Content="Tìm" HorizontalAlignment="Left" Height="32" Margin="446,120,0,0" VerticalAlignment="Top" Width="164" Click="btn_timtheoten_Click"/>
        <Label Content="Trạng thái" HorizontalAlignment="Left" Height="36" Margin="458,62,0,0" VerticalAlignment="Top" Width="176"/>
        <ComboBox x:Name="cbo_trangthaiban" HorizontalAlignment="Left" Height="36" Margin="653,64,0,0" VerticalAlignment="Top" Width="137"/>

    </Grid>
</Window>
