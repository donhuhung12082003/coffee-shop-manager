<Window x:Class="QuanLyQuanCafe.GUI.GUI_ADMIN.QuanLyNguyenLieu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanCafe.GUI.GUI_ADMIN"
        mc:Ignorable="d"
                WindowStartupLocation="CenterScreen"
WindowStyle="None"
ResizeMode="NoResize"
        Title="QuanLyNguyenLieu" Height="450" Width="800">
    <Grid x:Name="quanlynguyenlieu" Loaded="quanlynguyenlieu_Loaded">
        <Button x:Name="btn_them" Content="Thêm" HorizontalAlignment="Left" Height="28" Margin="84,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_them_Click"/>
        <Button x:Name="btn_sua" Content="Sửa" HorizontalAlignment="Left" Height="28" Margin="188,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_sua_Click"/>
        <Button x:Name="btn_xoa" Content="Xóa" HorizontalAlignment="Left" Height="28" Margin="302,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_xoa_Click"/>
        <Button x:Name="btn_nhaplai" Content="Nhập lại" HorizontalAlignment="Left" Height="28" Margin="402,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_nhaplai_Click" />
        <Button x:Name="btn_xuatexcel" Content="Xuất excel" HorizontalAlignment="Left" Height="28" Margin="504,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_xuatexcel_Click"/>
        <Button x:Name="btn_thoat" Content="Thoát" HorizontalAlignment="Left" Height="28" Margin="610,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_thoat_Click"/>
        <Label Content="Mã nguyên liệu:" HorizontalAlignment="Left" Height="40" Margin="40,26,0,0" VerticalAlignment="Top" Width="176"/>
        <Label Content="Tên nguyên liệu:" HorizontalAlignment="Left" Height="40" Margin="40,72,0,0" VerticalAlignment="Top" Width="176"/>
        <TextBox x:Name="txt_ma" HorizontalAlignment="Left" Height="41" Margin="253,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" x:Name="dg_dsnguyenlieu" HorizontalAlignment="Center" Height="172" Margin="0,185,0,0" VerticalAlignment="Top" Width="720" SelectionChanged="dg_dsnguyenlieu_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã nguyên liệu" Binding="{Binding MaNguyenLieu}" Width="*"/>
                <DataGridTextColumn Header="Tên nguyên liệu" Binding="{Binding TenNguyenLieu}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="txt_ten" HorizontalAlignment="Left" Height="41" Margin="253,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Label Content="Tìm theo tên:" HorizontalAlignment="Left" Height="39" Margin="84,126,0,0" VerticalAlignment="Top" Width="187"/>
        <TextBox x:Name="txt_timtheoten" HorizontalAlignment="Left" Height="39" Margin="276,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260"/>
        <Button x:Name="btn_timtheoten" Content="Tìm" HorizontalAlignment="Left" Height="39" Margin="561,126,0,0" VerticalAlignment="Top" Width="199" Click="btn_timtheoten_Click"/>

    </Grid>
</Window>
