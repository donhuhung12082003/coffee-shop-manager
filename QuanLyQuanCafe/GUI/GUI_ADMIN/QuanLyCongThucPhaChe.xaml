<Window x:Class="QuanLyQuanCafe.GUI.GUI_ADMIN.QuanLyCongThucPhaChe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanCafe.GUI.GUI_ADMIN"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
WindowStyle="None"
ResizeMode="NoResize"
        Title="QuanLyCongThucPhaChe" Height="450" Width="800">
    <Grid x:Name="quanlycongthucphache" Loaded="quanlycongthucphache_Loaded">
        <Label Content="Tên đồ uống:" HorizontalAlignment="Left" Height="36" Margin="18,10,0,0" VerticalAlignment="Top" Width="146"/>
        <ComboBox IsEditable="True" IsTextSearchEnabled="True" x:Name="cbo_douong" HorizontalAlignment="Left" Height="36" Margin="181,10,0,0" VerticalAlignment="Top" Width="147"/>
        <Label Content="Nguyên liệu:" HorizontalAlignment="Left" Height="36" Margin="393,12,0,0" VerticalAlignment="Top" Width="146"/>
        <ComboBox  IsEditable="True" IsTextSearchEnabled="True"  x:Name="cbo_nguyenlieu" HorizontalAlignment="Left" Height="36" Margin="559,12,0,0" VerticalAlignment="Top" Width="147"/>
        <Label Content="Số lượng nguyên liệu:" HorizontalAlignment="Left" Height="36" Margin="18,51,0,0" VerticalAlignment="Top" Width="146"/>
        <TextBox x:Name="txt_soluongnguyenlieu" HorizontalAlignment="Left" Height="36" Margin="181,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147"/>
        <ComboBox x:Name="cbo_donvitinh" HorizontalAlignment="Left" Height="36" Margin="559,53,0,0" VerticalAlignment="Top" Width="147"/>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" x:Name="dg_dscongthuc" HorizontalAlignment="Center" Height="150" VerticalAlignment="Center" Width="738" SelectionChanged="dg_dscongthuc_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã công thức" Binding="{Binding MaCongThuc}" Width="*"/>
                <DataGridTextColumn Header="Mã đồ uống" Binding="{Binding MaDoUong}" Width="*"/>
                <DataGridTextColumn Header="Mã nguyên liệu" Binding="{Binding MaNguyenLieu}" Width="*"/>
                <DataGridTextColumn Header="Số lượng nguyên liệu cần dùng" Binding="{Binding MoTaSoLuongNguyenLieuCanDung}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Tìm theo tên đồ uống:" HorizontalAlignment="Left" Height="39" Margin="351,96,0,0" VerticalAlignment="Top" Width="138"/>
        <Button x:Name="btn_timtheoten" Content="Tìm" HorizontalAlignment="Left" Height="39" Margin="676,94,0,0" VerticalAlignment="Top" Width="88" Click="btn_timtheoten_Click"/>
        <Button x:Name="btn_them" Content="Thêm" HorizontalAlignment="Left" Height="28" Margin="106,380,0,0" VerticalAlignment="Top" Width="88" Click="btn_them_Click"/>
        <Button x:Name="btn_sua" Content="Sửa" HorizontalAlignment="Left" Height="28" Margin="210,380,0,0" VerticalAlignment="Top" Width="88" Click="btn_sua_Click"/>
        <Button x:Name="btn_xoa" Content="Xóa" HorizontalAlignment="Left" Height="28" Margin="324,380,0,0" VerticalAlignment="Top" Width="88" Click="btn_xoa_Click"/>
        <Button x:Name="btn_nhaplai" Content="Nhập lại" HorizontalAlignment="Left" Height="28" Margin="424,380,0,0" VerticalAlignment="Top" Width="88" Click="btn_nhaplai_Click" />
        <Button x:Name="btn_xuatword" Content="Xuất word" HorizontalAlignment="Left" Height="28" Margin="526,380,0,0" VerticalAlignment="Top" Width="88" Click="btn_xuatword_Click"/>
        <Button x:Name="btn_thoat" Content="Thoát" HorizontalAlignment="Left" Height="28" Margin="632,380,0,0" VerticalAlignment="Top" Width="88" Click="btn_thoat_Click"/>
        <Label Content="Đơn vị tính:" HorizontalAlignment="Left" Height="36" Margin="393,48,0,0" VerticalAlignment="Top" Width="146"/>
        <Label Content="Mã công thức:" HorizontalAlignment="Left" Height="36" Margin="18,94,0,0" VerticalAlignment="Top" Width="146"/>
        <TextBox x:Name="txt_macongthuc" HorizontalAlignment="Left" Height="36" Margin="180,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
        <ComboBox IsEditable="True" IsTextSearchEnabled="True" x:Name="cbo_timdouongtheoten" HorizontalAlignment="Left" Height="37" Margin="524,95,0,0" VerticalAlignment="Top" Width="147"/>
        <Button x:Name="btn_xemcongthuc" Content="Công thức pha chế" HorizontalAlignment="Left" Height="59" Margin="31,308,0,0" VerticalAlignment="Top" Width="146" Click="btn_xemcongthuc_Click"/>
        <TextBox IsReadOnly="True" x:Name="tb_congthuc"  HorizontalAlignment="Left" Height="59" Margin="194,308,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="570"/>


    </Grid>
</Window>
