<Window x:Class="QuanLyQuanCafe.GUI.GUI_ADMIN.QuanLyLoaiDoUong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanCafe.GUI.GUI_ADMIN"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
WindowStyle="None"
ResizeMode="NoResize"
        Title="QuanLyLoaiDoUong" Height="450" Width="800">
    <Grid x:Name="quanlydouong" Loaded="quanlydouong_Loaded">
        <Label Content="Mã loại đồ uống:" HorizontalAlignment="Left" Height="33" Margin="37,10,0,0" VerticalAlignment="Top" Width="151"/>
        <Label Content="Tên loại đồ uống:" HorizontalAlignment="Left" Height="33" Margin="409,10,0,0" VerticalAlignment="Top" Width="151"/>
        <TextBox x:Name="txt_maloaidouong" HorizontalAlignment="Left" Height="33" Margin="208,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txt_tenloaidouong" HorizontalAlignment="Left" Height="33" Margin="578,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" x:Name="dg_dsloaidouong" HorizontalAlignment="Center" Height="196" VerticalAlignment="Center" Width="724" SelectionChanged="dg_dsloaidouong_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã loại" Binding="{Binding MaLoai}" Width="*"/>
                <DataGridTextColumn Header="Tên loại" Binding="{Binding TenLoai}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_themloaidouong" Content="Thêm" HorizontalAlignment="Left" Height="28" Margin="75,328,0,0" VerticalAlignment="Top" Width="88" Click="btn_themloaidouong_Click"/>
        <Button x:Name="btn_sualoaidouong" Content="Sửa" HorizontalAlignment="Left" Height="28" Margin="180,328,0,0" VerticalAlignment="Top" Width="88" Click="btn_sualoaidouong_Click"/>
        <Button x:Name="btn_xoaloaidouong" Content="Xóa" HorizontalAlignment="Left" Height="28" Margin="293,328,0,0" VerticalAlignment="Top" Width="88" Click="btn_xoaloaidouong_Click"/>
        <Button x:Name="btn_nhaplai" Content="Nhập lại" HorizontalAlignment="Left" Height="28" Margin="394,328,0,0" VerticalAlignment="Top" Width="88" Click="btn_nhaplai_Click"/>
        <Button x:Name="btn_xuatexceldanhsachloaidouong" Content="Xuất excel" HorizontalAlignment="Left" Height="28" Margin="496,328,0,0" VerticalAlignment="Top" Width="88" Click="btn_xuatexceldanhsachloaidouong_Click"/>
        <Button x:Name="btn_thoat" Content="Thoát" HorizontalAlignment="Left" Height="28" Margin="601,328,0,0" VerticalAlignment="Top" Width="88" Click="btn_thoat_Click"/>
        <Label Content="Tìm theo tên:" HorizontalAlignment="Left" Height="35" Margin="102,70,0,0" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txt_timtheotenloaidouong" HorizontalAlignment="Left" Height="33" Margin="293,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <Button x:Name="btn_timtheotenloaidouong" Content="Tìm" HorizontalAlignment="Left" Height="33" Margin="509,72,0,0" VerticalAlignment="Top" Width="160" Click="btn_timtheotenloaidouong_Click"/>

    </Grid>
</Window>
