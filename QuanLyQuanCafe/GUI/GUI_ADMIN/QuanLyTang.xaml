<Window x:Class="QuanLyQuanCafe.GUI.GUI_ADMIN.QuanLyTang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanCafe.GUI.GUI_ADMIN"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
WindowStyle="None"
ResizeMode="NoResize"
        Title="QuanLyTang" Height="450" Width="800">
    <Grid x:Name="quanlytang" Loaded="quanlytang_Loaded">
        <Label Content="Mã tầng:" HorizontalAlignment="Left" Height="42" Margin="46,33,0,0" VerticalAlignment="Top" Width="168"/>
        <Label Content="Tên tầng:" HorizontalAlignment="Left" Height="42" Margin="46,80,0,0" VerticalAlignment="Top" Width="168"/>
        <TextBox x:Name="txt_ma" HorizontalAlignment="Left" Height="42" Margin="239,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <TextBox x:Name="txt_ten" HorizontalAlignment="Left" Height="42" Margin="239,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <Button x:Name="btn_them" Content="Thêm" HorizontalAlignment="Left" Height="28" Margin="84,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_them_Click"/>
        <Button x:Name="btn_sua" Content="Sửa" HorizontalAlignment="Left" Height="28" Margin="188,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_sua_Click"/>
        <Button x:Name="btn_xoa" Content="Xóa" HorizontalAlignment="Left" Height="28" Margin="302,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_xoa_Click"/>
        <Button x:Name="btn_nhaplai" Content="Nhập lại" HorizontalAlignment="Left" Height="28" Margin="402,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_nhaplai_Click" />
        <Button x:Name="btn_thoat" Content="Thoát" HorizontalAlignment="Left" Height="28" Margin="508,376,0,0" VerticalAlignment="Top" Width="88" Click="btn_thoat_Click"/>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" x:Name="dg_dstang" HorizontalAlignment="Center" Height="176" Margin="0,180,0,0" VerticalAlignment="Top" Width="708" SelectionChanged="dg_dstang_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã tầng" Binding="{Binding MaTang}" Width="*"/>
                <DataGridTextColumn Header="Tên tầng" Binding="{Binding TenTang}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Tìm theo tên:" HorizontalAlignment="Left" Height="39" Margin="71,136,0,0" VerticalAlignment="Top" Width="187"/>
        <TextBox x:Name="txt_timtheoten" HorizontalAlignment="Left" Height="39" Margin="263,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260"/>
        <Button x:Name="btn_timtheoten" Content="Tìm" HorizontalAlignment="Left" Height="39" Margin="548,136,0,0" VerticalAlignment="Top" Width="199" Click="btn_timtheoten_Click"/>

    </Grid>
</Window>
