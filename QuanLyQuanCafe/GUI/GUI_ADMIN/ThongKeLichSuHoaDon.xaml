<Window x:Class="QuanLyQuanCafe.GUI.GUI_ADMIN.ThongKeLichSuHoaDon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyQuanCafe.GUI.GUI_ADMIN"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
WindowStyle="None"
ResizeMode="NoResize"
        Title="ThongKeLichSuHoaDon" Height="450" Width="800">
    <Grid>
        <Label Content="LỊCH SỬ HÓA ĐƠN BÁN HÀNG" HorizontalAlignment="Center" Height="40" Margin="0,10,0,0" VerticalAlignment="Top" Width="188"/>
        <Label Content="Từ ngày:" HorizontalAlignment="Left" Height="45" Margin="38,83,0,0" VerticalAlignment="Top" Width="123"/>
        <Label Content="Đến ngày:" HorizontalAlignment="Left" Height="45" Margin="419,83,0,0" VerticalAlignment="Top" Width="123"/>
        <DatePicker x:Name="dp_tungay" HorizontalAlignment="Left" Height="45" Margin="183,83,0,0" VerticalAlignment="Top" Width="212"/>
        <DatePicker x:Name="dp_denngay" HorizontalAlignment="Left" Height="45" Margin="562,83,0,0" VerticalAlignment="Top" Width="212"/>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" x:Name="dg_dshoadon" HorizontalAlignment="Left" Height="138" Margin="38,203,0,0" VerticalAlignment="Top" Width="736" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Số thứ tự" Binding="{Binding SoThuTu}" Width="*"/>
                <DataGridTextColumn Header="Mã hóa đơn" Binding="{Binding MaHoaDon}" Width="*"/>
                <DataGridTextColumn Header="Nhân viên" Binding="{Binding TenNhanVien}" Width="*"/>
                <DataGridTextColumn Header="Vị trí" Binding="{Binding ViTri}" Width="*"/>
                <DataGridTextColumn Header="Ngày" Binding="{Binding NgayThanhToan}" Width="*"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TongTien, StringFormat={}{0:N0} VNĐ}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_locdulieu" Content="Lọc dữ liệu" HorizontalAlignment="Left" Height="36" Margin="277,146,0,0" VerticalAlignment="Top" Width="235" Click="btn_locdulieu_Click"/>
        <Button x:Name="btn_xuatexcel" Content="Xuất excel" HorizontalAlignment="Left" Height="34" Margin="83,356,0,0" VerticalAlignment="Top" Width="160" Click="btn_xuatexcel_Click" />
        <Label Content="Tổng" HorizontalAlignment="Left" Height="34" Margin="256,357,0,0" VerticalAlignment="Top" Width="88"/>
        <TextBlock x:Name="tb_tongtien" HorizontalAlignment="Left" Height="33" Margin="368,357,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Label Content="VNĐ" HorizontalAlignment="Left" Height="33" Margin="541,357,0,0" VerticalAlignment="Top" Width="47"/>
        <Button x:Name="btn_thoat" Content="Thoát" HorizontalAlignment="Left" Height="34" Margin="614,357,0,0" VerticalAlignment="Top" Width="160" Click="btn_thoat_Click" />

    </Grid>
</Window>
